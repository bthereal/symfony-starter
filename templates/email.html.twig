<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <style type="text/css">
            .wrapper {
                background: #f5f5f5;
                width: 100%;
            }

            .main-column {
                width:580px;
                min-width:580px;
                background: #ffffff;
            }

            body {
                color: #000000;
                font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
                font-size: 16px;
                margin: 0;
                padding: 0;
            }

            h2 {
                font-weight: bold;
                font-size: 18px;
                margin-bottom: 20px;
            }

            p {
                font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
                line-height: 26px;
                margin: 0 0 20px;
                padding: 0;
            }

            hr {
                border-top: 0;
                border-bottom: 1px solid #e0e0e0;
                margin: 0;
                padding: 0;
            }

            table {
                width: 100%;
            }

            .center-text {
                text-align: center;
            }

            .center-block {
                margin: 0 auto;
            }

            .section-header {
                height: 140px;
                text-align: center;
                vertical-align: middle;
            }

            .section-header,
            .section-content,
            .section-footer {
                text-align: center;
            }

            .section-content {
                font-size: 18px;
                padding: 40px 0;
            }

            .section-content__image {
                margin-bottom: 40px;
            }

            .section-content__sub {
                font-size: 16px;
                margin-top: 60px;
            }

            .section-footer {
                padding: 30px 0;
            }
        </style>
        {% block style %}
        {% endblock style %}
    </head>

    <body>
        <table width="100%" class="wrapper">
            <tr>
                <td align="center">
                    <table width="580" cellpadding="0" cellspacing="0" class="main-column">
                        <tr>
                            <td colspan="3">
                                <table cellpadding="0" cellspacing="0" border="0" height="140" width="100%">
                                  <tr>
                                    <td background="" bgcolor="white" valign="middle" class="section-header">
                                      <!--[if gte mso 9]>
                                      <v:rect xmlns:v="urn:schemas-microsoft-com:vml" fill="true" stroke="false" style="mso-width-percent:1000;height:140px;">
                                        <v:fill type="tile" src="" color="white" />
                                        <v:textbox inset="0,0,0,0">
                                      <![endif]-->
                                      <div>
                                        <img src="" class="center-block">
                                      </div>
                                      <!--[if gte mso 9]>
                                        </v:textbox>
                                      </v:rect>
                                      <![endif]-->
                                    </td>
                                  </tr>
                                </table>
                            </td>
                        </tr>

                        {% block content %}
                        {% endblock %}

                        <tr>
                            <td width="30">&nbsp;</td>
                            <td width="520" class="section-footer" style="min-width: 520px;"></td>
                            <td width="30">&nbsp;</td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </body>
</html>
