<!DOCTYPE html>
<html>
    <meta charset="UTF-8" />

    <body class="hold-transition login-page">
    {% block body %}
        <div class="text-center" style="width: 80%;margin: 2em auto;">
        </div>

        <div class="c-login">
            <div class="c-login__box">
                <form method="post">
                    <input type="hidden" name="_target_path" value="{{ target_path }}" />

                    {% if error %}
                        <div class="alert alert-danger">{{ error.message }}</div>
                    {% endif %}
                    <div class="form-group has-feedback">
                        <label for="username" class="sr-only">Email</label>
                        <input type="email" class="form-control" id="username" name="username" placeholder="Email" required value="{{ last_username }}" autofocus />
                    </div>
                    <div class="form-group has-feedback">
                        <label for="password" class="sr-only">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required />
                    </div>
                    <div class="col-xs-12 text-center">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>

                    <div class="col-xs-12 text-center mt-3">
                        <a href="{{ path('password_reset_request') }}"><strong>Reset password</strong></a>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </form>
            </div>
        </div>
    {% endblock %}

    {% block footer_js %}{% endblock %}
    </body>
</html>
